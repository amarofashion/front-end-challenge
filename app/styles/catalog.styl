@import './vars/colors.styl'
@import './vars/shadows.styl'
@import './vars/medias.styl'

.catalog
	padding 2% 3%
	font-size 0
	max-width 1200px
	margin auto
	
	@media (min-width desk-low)
		width 90%

	&__filter h3
		font-size 1.2rem
		font-weight 500

	&__item
		width 90%
		top 0
		margin 1% auto 5%
		padding-bottom 5%
		display block
		vertical-align top
		box-sizing border-box
		position relative
		cursor pointer
		transition all .3s ease-in-out
		
		@media (min-width tablet)
			width 48%
			display inline-block
			margin 1% 1% 3%
			padding-bottom 0

		@media (min-width tablet-high)
			width 31%

		@media (min-width desk-low)
			width 23%
			padding-bottom 0
			
			img
				opacity .85

			&:hover
				top -.3rem
				
				.catalog
					&__image
						opacity 1
						
					&__sale
						color text-red
						background-color transparent
						font-weight bold
						right -3px			

	&__image
		border-radius 2px
		width 100%
		box-sizing border-box
		transition all .3s ease-in-out
		
	&__content
		font-size 1.2rem
		text-align center
	
	&__name
		font-size 1.2rem
		font-weight 400
		padding 2% 0
		line-height 3rem
		vertical-align middle

	&__price
		border-top 1px solid rgba(0, 0, 0, .1)
		display inline-block
		line-height 2.5rem

	&__value
		font-weight 700
		font-size 1rem
		margin 0 5px
		color text-red
		
		&--old
			color text-gray
			font-size .9rem
			text-decoration line-through

	&__buy
		display block
		margin 3% auto 0
		padding 0 1.5rem
		border 2px solid inverted
		text-transform uppercase
		line-height 2.5rem
		font-size 1.1rem
		letter-spacing 0.05rem
		font-weight 600
		transition all .4s ease-in-out
		background-color main
		color text
		cursor pointer
		
		&:hover
			background-color inverted
			color main

	&__sale
		position absolute
		top 2%
		right 0
		margin 0
		width 60px
		height 18px
		line-height 18px
		font-size .75rem
		text-transform uppercase
		color main
		text-align center
		background-color text-red
		border 2px solid text-red
		transition all .3s ease-in-out
		z-index 2