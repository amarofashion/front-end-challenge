.modal
	padding 2rem 1rem
	
	&__title
		font-weight 400
		text-align center

	&__close
		position absolute
		top .8rem
		right .8rem
		border 0
		background-color transparent
		cursor pointer
		font-size 1.2rem
		
	.catalog
		&__sizes
			display block
			top 0
			margin 20px auto
			width 100%
			text-align center
			
		&__size
			cursor pointer
			
		&__buy
			margin-top 30px
			
	&__wrapper > div > div
		width 90vw !important
		max-width 640px
		
		