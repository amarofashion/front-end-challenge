@import './vars/colors.styl'
@import './vars/fonts.styl'

body, html
	padding 0
	margin 0
	background-color #333
	// -webkit-font-smoothing antialiased
	font-size 14px
	font-family default
	
main
	background-color light-white
	// <--- temporary
	// position relative
	// width 360px
