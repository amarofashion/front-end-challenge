//
// Component Header
// ============================================================================
.main-header
  top 0
  left 0
  position fixed

  width 100%
  display flex
  padding 25px 15px
  align-items center
  justify-content space-between
  background-color $color-grey

  h1
    upper()

    font-size 2rem
    font-weight 100
    color $color-white

  button
    size(45px)

    padding 5px
    border none
    background transparent

    cursor pointer

    span
      font-size 2.5rem
      color $color-white
